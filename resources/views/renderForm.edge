<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Adonis Testing</title>
</head>
<body>
  <h1>Formulaire trop cool</h1>

  <form method="post">
    <div>
      <label for="firstname">Prénom</label>
      <input type="text" name="firstname" id="firstname">
      @!component('components/fieldError', { errorKey: 'firstname' })
    </div>
    <div>
      <label for="lastname">Nom</label>
      <input type="text" name="lastname" id="lastname">
      @!component('components/fieldError', { errorKey: 'lastname' })
    </div>
    <div>
      <label for="email">Email</label>
      <input type="text" name="email" id="email">
      @!component('components/fieldError', { errorKey: 'email' })
    </div>
    <div>
      <label for="phone">Téléphone</label>
      <input type="text" name="phone" id="phone">
      @!component('components/fieldError', { errorKey: 'phone' })
    </div>
    {{ csrfField() }}
    <button type="submit">Envoyer</button>
  </form>
</body>
</html>
